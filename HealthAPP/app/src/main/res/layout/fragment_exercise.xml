<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exercise.ExerciseFragment"
    android:background="@drawable/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/exercise_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent" >
        <TextView
            android:id="@+id/toolbar_exercise"
            android:text="Exercise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/mytitlestyle" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/text_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/get_sitPosture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_exercise"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="306dp"
        android:text="Get current sittting posture"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="502dp" />
</RelativeLayout>