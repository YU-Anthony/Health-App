<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".ui.emergencyCall.EmergencyCallFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/emergencyCall_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent" >
        <TextView
            android:id="@+id/toolbar_emergencyCall"
            android:text="Emergency contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/mytitlestyle" />
    </androidx.appcompat.widget.Toolbar>



            <LinearLayout
                android:id="@+id/emergencyCall_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/emergencyCall_toolbar">

                <TextView
                    android:id="@+id/emergencyCall__title1"
                    style="@style/sitting_time_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact List" />

                <LinearLayout
                    android:id="@+id/contact_list"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/add_contact"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/add"
                        android:layout_gravity="center"/>

                </LinearLayout>


                <ImageView
                    android:id="@+id/phone_call_button"
                    android:layout_marginTop="20dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_below="@id/contact_list"
                    app:srcCompat="@drawable/call_button" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/emergencyCall_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_below="@id/emergencyCall_layout1">

                <TextView
                    android:id="@+id/emergencyCall__title2"
                    style="@style/sitting_time_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="History" />
                <TextView
                    android:id="@+id/callLog_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="5pt"
                    style="@style/mytitlestyle2"
                    android:textColor="@color/black"/>
            </LinearLayout>





</LinearLayout>